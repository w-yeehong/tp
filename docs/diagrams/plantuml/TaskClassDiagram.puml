@startuml
!include style.puml
skinparam arrowThickness 1.1
skinparam arrowColor MODEL_COLOR
skinparam classBackgroundColor MODEL_COLOR

Interface ReadOnlyList <<Interface>>

Package Room <<Rectangle>> {
    Class Room
    Class RoomTasks {
        +addTask(Task)
        +removeTask(Task)
        +setTask(Task, editedTask: Task)
    }
}

Room *--r> "1" RoomTasks
RoomTasks -.|> ReadOnlyList

Package Task <<Rectangle>> {
    Class Task
    Class TaskList
    Class Description
    Class DateTimeDue
}

RoomTasks ..> Task
RoomTasks *--l> "1" TaskList
TaskList *--> "*" Task
Task *--> "1" Description
Task *--> "0..1" DateTimeDue

Description -[hidden]right-> DateTimeDue

@enduml
