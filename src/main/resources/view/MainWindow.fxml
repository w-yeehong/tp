<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.stage.*?>

<fx:root minHeight="600" minWidth="500.0" onCloseRequest="#handleExit" title="Covigent" type="javafx.stage.Stage" xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1">
  <icons>
    <Image url="@/images/address_book_32.png" />
  </icons>

  <scene>
    <Scene>
      <stylesheets>
        <URL value="@../css/MainWindow.css" />
        <URL value="@../css/Extensions.css" />
      </stylesheets>

      <VBox>
        <HBox fx:id="covigentLogoPlaceholder" styleClass="main-logo-stack-pane" HBox.hgrow="NEVER">
          <children>
            <ImageView fx:id="logoIcon" fitHeight="53.0" fitWidth="157.0" pickOnBounds="true" preserveRatio="true">
              <HBox.margin>
                <Insets left="10.0" top="3.0" />
              </HBox.margin>
            </ImageView>
          </children>
        </HBox>

        <MenuBar fx:id="menuBar" style="-fx-background-color: #2b5c7b;" styleClass="main-menu" VBox.vgrow="NEVER">
          <Menu mnemonicParsing="false" text="File">
            <MenuItem mnemonicParsing="false" onAction="#handleExit" text="Exit" />
          </Menu>
          <Menu mnemonicParsing="false" text="Help">
            <MenuItem fx:id="helpMenuItem" mnemonicParsing="false" onAction="#handleHelp" text="Help" />
          </Menu>
        </MenuBar>

        <TabPane fx:id="covigentTabs" styleClass="main-tab-pane" tabClosingPolicy="UNAVAILABLE">
          <tabs>
            <Tab fx:id="patientTab" styleClass="main-tab" text="Patients">
              <content>
                <StackPane fx:id="patientListPanelPlaceholder" VBox.vgrow="ALWAYS" />
              </content>
            </Tab>
            <Tab fx:id="roomTab" styleClass="main-tab" text="Rooms">
              <content>
                <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                 <children>
                    <StackPane fx:id="roomListPanelPlaceHolder" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" />
                 </children>
                </AnchorPane>
              </content>
            </Tab>
            <Tab fx:id="taskTab" styleClass="main-tab" text="Tasks">
              <content>
                <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0" />
              </content>
            </Tab>
          </tabs>
        </TabPane>

        <StackPane fx:id="commandBoxPlaceholder" styleClass="main-pane-with-border" VBox.vgrow="NEVER">
        </StackPane>

        <StackPane fx:id="resultDisplayPlaceholder" styleClass="main-pane-with-border" VBox.vgrow="NEVER"
                   minHeight="100" prefHeight="100" maxHeight="100">
        </StackPane>

        <StackPane fx:id="statusBarPlaceholder" VBox.vgrow="NEVER" />
      </VBox>
    </Scene>
  </scene>
</fx:root>
